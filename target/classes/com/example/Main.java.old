package com.example;

import org.elasticsearch.client.RestHighLevelClient;

import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class Main {
    public static void main(String[] args) throws IOException {
        if (args.length < 1) {
            System.out.println("Usage: java -jar <jar-file> [producer|consumer]");
            return;
        }

        Properties prop = new Properties();
        try (InputStream input = Main.class.getClassLoader().getResourceAsStream("config.properties")) {
            prop.load(input);
        }

        String producerIndex = prop.getProperty("producer.index");
        String consumerIndex = prop.getProperty("consumer.index");
        String offsetIndex = prop.getProperty("consumer.offset.index");

        RestHighLevelClient client = ElasticsearchService.getClient();

        if (args[0].equalsIgnoreCase("producer")) {
            Producer producer = new Producer(client, producerIndex);
            producer.start();
        } else if (args[0].equalsIgnoreCase("consumer")) {
            Consumer consumer = new Consumer(client, consumerIndex, offsetIndex);
            consumer.start();
        } else {
            System.out.println("Unknown argument: " + args[0]);
        }

        Runtime.getRuntime().addShutdownHook(new Thread(ElasticsearchService::closeClient));
    }
}
